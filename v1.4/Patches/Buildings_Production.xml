<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!-- Remove electricity from every Biotech Building-->
    <Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName="SubcoreEncoder"]/comps/li[@Class = "CompProperties_Power"]</xpath>
	</Operation>

	<Operation Class="PatchOperationRemove">
		<xpath>Defs/ThingDef[defName="SubcoreEncoder"]/comps/li[@Class = "CompProperties_Flickable"]</xpath>
	</Operation>

	<!-- Subcore Encoder (Gem infuser)-->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="SubcoreEncoder"]/label</xpath>
		<value>
			<label>gem infuser</label>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="SubcoreEncoder"]/description</xpath>
		<value>
			<description>A work station where an artificer can craft basic-tier soul gems. Soul gems are the brains of automatons, and one is required to craft any automaton. Basic soul gems can only be used in simple basic-tier automatons.\n\nHigher tier soul gems can be created by building a subcore softscanner or a subcore ripscanner.</description>
		</value>
	</Operation>

	 <Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="SubcoreEncoder"]/graphicData/drawSize</xpath>
		<value>
			<drawSize>(4,3)</drawSize>
		</value>
	</Operation>

	<!-- Subcore SoftScanner (Gem infuser)-->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="SubcoreSoftscanner"]/label</xpath>
		<value>
			<label>amplified gem infuser</label>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="SubcoreSoftscanner"]/description</xpath>
		<value>
			<description>PLACEHOLDER</description>
		</value>
	</Operation>

	 <Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="SubcoreSoftscanner"]/graphicData</xpath>
		<value>
			<drawSize>(4,3)</drawSize>
		</value>
	</Operation>

	<!-- Subcore RipScanner (Gem infuser)-->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="SubcoreRipscanner"]/label</xpath>
		<value>
			<label>soul harvester</label>
		</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="SubcoreRipscanner"]/description</xpath>
		<value>
			<description>PLACEHOLDER</description>
		</value>
	</Operation>

	 <Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="SubcoreRipscanner"]/graphicData</xpath>
		<value>
			<drawSize>(3,2.5)</drawSize>
		</value>
	</Operation>


</Patch>